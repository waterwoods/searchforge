# Development Mode Environment Variables
# Source this file for dev mode: source dev.env

# Mode identifier
export SEARCHFORGE_MODE=dev

# Low-cost experiment defaults
export DEV_TOP_K=20
export DEV_SAMPLE=50
export DEV_REPEATS=1
export DEV_CONCURRENCY=8
export DEV_TIMEOUT=10.0
export DEV_EF_SEARCH=64

# Dataset selection (use 10k subset)
export DEV_DATASET_NAME=fiqa_10k_v1
export DEV_QRELS_NAME=fiqa_qrels_10k_v1

# Search feature flags (disabled by default for dev)
export DEV_USE_HYBRID=false
export DEV_RERANK=false

# Reports output
export DEV_REPORTS_DIR=reports/dev

# How to use:
# 1. Development mode (default):
#    source dev.env && bash scripts/smoke.sh
#
# 2. Override to production params:
#    TOP_K=50 SAMPLE=1000 bash scripts/smoke.sh
#
# 3. Enable features for testing:
#    DEV_USE_HYBRID=true DEV_RERANK=true bash scripts/smoke.sh

